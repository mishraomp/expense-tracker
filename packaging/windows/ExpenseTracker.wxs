<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="Expense Tracker" Language="1033" Version="1.0.0.0" Manufacturer="ExpenseTracker" UpgradeCode="PUT-GUID-HERE">
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine"/>

    <MediaTemplate/>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="ExpenseTracker">
          <Directory Id="BACKEND" Name="backend" />
          <Directory Id="FRONTEND" Name="frontend" />
        </Directory>
      </Directory>
    </Directory>

    <Feature Id="DefaultFeature" Level="1">
      <ComponentGroupRef Id="ProductComponents"/>
    </Feature>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="InstallPS" Guid="*">
        <File Source="packaging/windows/install-service.ps1" KeyPath="yes" />
      </Component>
    </ComponentGroup>

    <CustomAction Id="InstallServicePS" FileKey="InstallPS" Execute="deferred" Impersonate="no" ExeCommand="-ExecutionPolicy Bypass -File [INSTALLFOLDER]\install-service.ps1"/>

    <InstallExecuteSequence>
      <Custom Action="InstallServicePS" After="InstallFiles">NOT REMOVE</Custom>
    </InstallExecuteSequence>

  </Product>
</Wix>
