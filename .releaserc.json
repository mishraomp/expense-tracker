{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "test", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "perf", "section": "‚ö° Performance" },
            { "type": "refactor", "section": "‚ôªÔ∏è Refactoring" },
            { "type": "docs", "section": "üìö Documentation", "hidden": true },
            { "type": "chore", "section": "üîß Maintenance", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Expense Tracker Changelog"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "pkg/expense-tracker_*_amd64.deb",
            "label": "Expense Tracker for Ubuntu/Debian (amd64)",
            "name": "expense-tracker-${nextRelease.version}-amd64.deb"
          },
          {
            "path": "pkg/expense-tracker-*-x64.msi",
            "label": "Expense Tracker for Windows (x64)",
            "name": "expense-tracker-${nextRelease.version}-x64.msi"
          }
        ],
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}",
        "failTitle": "Release failed for ${branch.name}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
